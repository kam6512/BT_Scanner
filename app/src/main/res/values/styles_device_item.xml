<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DeviceItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">start|center_vertical</item>
    </style>

    <style name="DeviceItemTableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:layout_margin">@dimen/deviceItem_margin</item>
    </style>

    <style name="DeviceItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginStart">@dimen/deviceItem_margin</item>
        <item name="android:text">device</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="DeviceItemCard" parent="DetailItemCard">
        <item name="android:layout_margin">@dimen/deviceItem_margin</item>
    </style>
</resources>