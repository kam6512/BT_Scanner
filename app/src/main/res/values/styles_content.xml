<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DashBoardItemFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
    </style>

    <style name="DashBoardItemFrame.DashBoardCard">
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">15dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">7dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="contentPadding">0dp</item>
    </style>

    <style name="DashBoardItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@null</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="DashBoardItemLabel.DashBoardItemValue">
        <item name="android:layout_alignParentTop">false</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
</resources>