<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DetailItemCard"
    app:cardBackgroundColor="@color/colorPrimaryOrange">

    <LinearLayout style="@style/DetailItemFrame">

        <TextView
            android:id="@+id/detail_child_list_item_characteristics_title"
            style="@style/DetailItemTextView"
            android:text="@string/detail.child.list.item.characteristics.title"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/detail_child_list_item_characteristics_UUID"
            style="@style/DetailItemTextView"
            android:text="@string/detail.child.list.item.characteristics.UUID" />
    </LinearLayout>

</android.support.v7.widget.CardView>