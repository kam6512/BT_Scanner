<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ProfileItemCard"
    app:cardBackgroundColor="@color/colorPrimaryOrange">

    <LinearLayout style="@style/ProfileItemFrame"  android:divider="?android:attr/dividerHorizontal"

                  android:showDividers="middle">

        <TextView
            android:id="@+id/profile_child_list_item_characteristics_name"
            style="@style/ProfileItemTextView"
            android:text="@string/profile.characteristics.name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/profile_child_list_item_characteristics_UUID"
            style="@style/ProfileItemTextView"
            android:text="@string/profile.characteristics.UUID" />
    </LinearLayout>

</android.support.v7.widget.CardView>