<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@null">

    <LinearLayout
        android:id="@+id/prime_init_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/prime_add_user_name"
            style="@style/AddUserEditText.AddUserInput">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_add_user_name"
                style="@style/AddUserEditText"
                android:hint="@string/add.user.name.hint"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/prime_add_user_age"
            style="@style/AddUserEditText.AddUserInput">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_add_user_age"
                style="@style/AddUserEditText"
                android:hint="@string/add.user.age.hint"
                android:inputType="numberSigned"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/prime_add_user_height"
            style="@style/AddUserEditText.AddUserInput">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_add_user_height"
                style="@style/AddUserEditText"
                android:hint="@string/add.user.height.hint"
                android:inputType="numberSigned"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/prime_add_user_weight"
            style="@style/AddUserEditText.AddUserInput">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_add_user_weight"
                style="@style/AddUserEditText"
                android:hint="@string/add.user.weight.hint"
                android:inputType="numberSigned"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/prime_add_user_step"
            style="@style/AddUserEditText.AddUserInput">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_add_user_step"
                style="@style/AddUserEditText"
                android:hint="@string/add.user.step.hint"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

        <RadioGroup
            android:id="@+id/gender_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:divider="@color/colorAccent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/add.user.man"/>

            <RadioButton
                android:id="@+id/radio_woman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add.user.woman"/>
        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/prime_accept_fab"
                style="@style/Fab"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="end"
                android:src="@drawable/ic_keyboard_arrow_right_white_36dp"
                app:backgroundTint="@color/colorAccent"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>