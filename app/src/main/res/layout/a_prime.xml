<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/prime_start_frame"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/prime_drawer_layout"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/prime_coordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            tools:context=".activity.realmPrimeItem.BandContentActivity">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/prime_appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:theme="@style/AppTheme.AppBarOverlay">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@null"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/prime_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="?attr/colorPrimary"/>

                    <TextView
                        android:id="@+id/prime_toolbar_rssi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:text="@string/bt.rssi"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <ImageView
                        android:id="@+id/prime_toolbar_bluetoothFlag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/bt.rssi"/>


                </LinearLayout>

                <android.support.design.widget.TabLayout
                    android:id="@+id/prime_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    app:tabGravity="center"
                    app:tabMode="fixed"/>


            </android.support.design.widget.AppBarLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/toolbar_drop_shadow"
                app:layout_anchor="@id/prime_tabs"
                app:layout_anchorGravity="bottom|center"/>

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/prime_swipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <android.support.v4.view.ViewPager
                    android:id="@+id/prime_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:foreground="?android:windowContentOverlay"
                    />
            </android.support.v4.widget.SwipeRefreshLayout>

        </android.support.design.widget.CoordinatorLayout>


        <android.support.design.widget.NavigationView
            android:id="@+id/prime_nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/v_nav_header"
            app:menu="@menu/menu_prime"/>
    </android.support.v4.widget.DrawerLayout>
</FrameLayout>
