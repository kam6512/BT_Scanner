<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nursing_add_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_add_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_user_name_hint"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nursing_add_user_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_add_user_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_user_age_hint"
                android:inputType="numberSigned" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nursing_add_user_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_add_user_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_user_height_hint"
                android:inputType="numberSigned" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nursing_add_user_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_add_user_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_user_weight_hint"
                android:inputType="numberSigned" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nursing_add_user_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_add_user_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_user_step_hint"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <RadioGroup
            android:id="@+id/gender_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:divider="@color/colorAccent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/add_user_men" />

            <RadioButton
                android:id="@+id/radio_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_user_woman" />
        </RadioGroup>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="7dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">

            <com.rainbow.kam.bt_scanner.tools.design.RippleView
                android:id="@+id/nursing_add_user_skip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@null"
                app:rv_zoom="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/add_user_skip"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </com.rainbow.kam.bt_scanner.tools.design.RippleView>
        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/nursing_next_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_launcher_arrow_next"
            app:backgroundTint="@color/accent" />
    </LinearLayout>
</ScrollView>