<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:id="@+id/prime_nested"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/prime_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="1dp"
            app:contentPadding="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null">

                <ImageView
                    android:id="@+id/prime_card_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:scaleType="centerCrop"
                    android:tint="#88101010"
                    />

                <TextView
                    android:id="@+id/prime_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="@null"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="15dp"
                    android:textColor="@color/text_light"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/prime_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="25dp"
                    android:background="@null"
                    android:focusable="true"
                    android:gravity="center"
                    android:textColor="@color/text_light"
                    android:textSize="30sp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v4.view.ViewPager
            android:id="@+id/prime_viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/circle_counter_size"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/prime_tab_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:background="@null"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#343f57"
                app:cardCornerRadius="1dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:orientation="vertical">

                    <android.support.design.widget.TabLayout
                        android:id="@+id/prime_tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        app:layout_scrollFlags="scroll|enterAlways"
                        app:popupTheme="@style/AppTheme.PopupOverlay"
                        app:tabGravity="center"
                        app:tabIndicatorColor="@color/chart_dots"
                        app:tabMode="fixed"
                        app:tabSelectedTextColor="@color/chart_dots"
                        app:tabTextColor="@color/text_light"/>

                    <com.db.chart.view.LineChartView
                        android:id="@+id/prime_chart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@null"/>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/history_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:scrollbars="vertical"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>